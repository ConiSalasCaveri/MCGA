@model MCGA.Entities.ProfesionalDummy

@{
    ViewBag.Title = "TurnoProfesional";
}

<h2>Tomar nuevo turno</h2>

<h3>Busque un profesional</h3>

<div class="_form-horizontal">
    <div class="form-group">
        <label for="EstudioDescription" class="control-label col-md-2">Especialidad</label>
        <div class="col-md-10">
            <input class="form-control text-box single-line" data-val="true" data-val-required="Requerido" id="EstudioDescription" name="EstudioDescription" type="text" value="" placeholder="Ingrese las primeras letras de la especialidad" style="display: inline-block;" />
            <span class="field-validation-valid text-danger" data-valmsg-for="EstudioDescription" data-valmsg-replace="true" style="display: inline-block"></span>
            <div style=" margin-left: 50px; display: inline-block">

                @*@Html.ActionLink("Ver profesionales", "ListaTurnos", new { profesionalId: $("#estudioId").val() } )*@
                <input type="button" id="profesional" value="Ver estudios" onclick="irATurnos()" />
                @*@Html.ActionLink("Details", "Details", new { id = item.Id })*@
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="estudioId" class="control-label col-md-2">Estudio Id</label>
        <div class="col-md-10">
            <input class="form-control text-box single-line" id="estudioId" type="text" />
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $("#EstudioDescription").autocomplete({
            autoSelect: true,
            autoFocus: true,
            minLength: 1,
            source: function (request, response) {
                $.ajax({
                    url: '@Url.Action("GetEspecialidades", "Turno")',
                    datatype: "json",
                    data: { Areas: 'Masters', term: request.term },
                    success: function (data) {
                        response($.map(data, function (val, item) {
                            return { label: val.Descripcion, value: val.Descripcion, Id: val.Id };
                        }));
                    }
                });
            },
            select: function (event, ui) {
                $("#estudioId").val(ui.item.Id);
            }
        });
    </script>
    <script type="text/javascript">
        var myDato = $("#profesionalId").val();

        function irATurnos() {
            var myDato = $("#profesionalId").val();
            location.href = '/masters/turno/listaturnos/?profesionalId=' + myDato + '&page=1';
        }
    </script>
}
