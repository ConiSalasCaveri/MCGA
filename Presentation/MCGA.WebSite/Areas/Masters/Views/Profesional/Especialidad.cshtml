@model MCGA.Entities.Profesional

@{
    ViewBag.Title = "Especialidad";
}

<h2>Especialidad</h2>

<div>
    <h4>Profesional</h4>
    <h3>Nota: No aparecerán sugeridas las especialidades que el profesional ya tenga asignadas.</h3>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Apellido)
        </dd>

    </dl>

    <div class="_form-horizontal">
        <div class="form-group">
            <label for="EstudioDescription" class="control-label col-md-2">Especialidad</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" data-val="true" data-val-required="Requerido" id="EstudioDescription" name="EstudioDescription" type="text" value="" placeholder="Ingrese las primeras letras de la especialidad" style="display: inline-block;" />
                <span class="field-validation-valid text-danger" data-valmsg-for="EstudioDescription" data-valmsg-replace="true" style="display: inline-block"></span>
                <div style=" margin-left: 50px; display: inline-block">

                    @*@Html.ActionLink("Ver profesionales", "ListaTurnos", new { profesionalId: $("#estudioId").val() } )*@
                    <input type="button" id="profesional" value="Asignar especialidad" onclick="asignarEspecialidad()" />
                    @*@Html.ActionLink("Details", "Details", new { id = item.Id })*@
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="estudioId" type="hidden" />
            </div>
        </div>
    </div>


    <hr />

</div>
<p>
    @Html.ActionLink("Volver", "List")
</p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $("#EstudioDescription").autocomplete({
            autoSelect: true,
            autoFocus: true,
            minLength: 1,
            source: function (request, response) {
                $.ajax({
                    url: '@Url.Action("GetEspecialidades", "Profesional")',
                    datatype: "json",
                    data: { Areas: 'Masters', term: request.term },
                    success: function (data) {
                        response($.map(data, function (val, item) {
                            return { label: val.Descripcion, value: val.Descripcion, Id: val.Id };
                        }));
                    }
                });
            },
            select: function (event, ui) {
                $("#estudioId").val(ui.item.Id);
            }
        });
    </script>
    <script type="text/javascript">
        var myDato = $("#estudioId").val();

        function asignarEspecialidad() {
            var myDato = $("#estudioId").val();
            location.href = '/masters/profesional/profesionalEspecialidad/?id=' + myDato;
        }
    </script>
}

