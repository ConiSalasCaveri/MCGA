@using PagedList.Mvc;
@model PagedList.IPagedList<MCGA.Entities.Especialidad>


@{
    ViewBag.Title = "List";
}

<h2>Especialidades</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary" })
</p>
@using (Html.BeginForm("List", "Especialidad", FormMethod.Get))
{
    <p>
        @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control text-box single-line", autocomplete = "off", placeholder = "Ingrese la especialidad", style = "width:350px; display: inline-block;" })
        <input type="submit" value="Buscar" class="btn btn-info" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.Raw("Descripcion")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>            
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>    
            <td>
                <div class="dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Operaciones
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li>
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id })
                        </li>
                        <li>@Html.ActionLink("Detalles", "Details", new { id = item.Id })</li>
                        <li role="separator" class="divider"></li>
                        <li>@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</li>                        
                    </ul>
                </div>
            </td>
        </tr>
    }

</table>

Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("List", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))